pragma solidity ^0.8.19;

import {Test} from "forge-std/Test.sol";
import {IInterchainSecurityModule} from "../src/interfaces/IInterchainSecurityModule.sol";
import {IMailbox} from "../src/interfaces/IMailbox.sol";
import {MockTarget} from "../src/MockTarget.sol";
import {CrosschainExecutor} from "../src/CrosschainExecutor.sol";
import {CrosschainRelayer} from "../src/CrosschainRelayer.sol";
import {Action} from "../src/Structs.sol";

contract UnchainedE2ETest is Test {
    event ReceivedMessage(string message);

    address private constant HYPERLANE_MAILBOX =
        0x35231d4c2D8B8ADcB5617A638A0c4548684c7C70;
    address private constant POLYGON_RELAYER =
        0xE305B5a136bDFfaC05E7F461eeb42A7041F485b3;
    address private constant MAINNNET_ISM =
        0xec48E52D960E54a179f70907bF28b105813877ee;

    IMailbox private constant mailbox = IMailbox(HYPERLANE_MAILBOX);
    IInterchainSecurityModule private constant ism =
        IInterchainSecurityModule(MAINNNET_ISM);

    uint32 MAINNET = 1;
    uint256 mainnetFork;
    uint256 polygonFork;

    function setUp() public {
        mainnetFork = vm.createFork(vm.rpcUrl("mainnet"), 17_076_708);
        polygonFork = vm.createFork(vm.rpcUrl("polygon"), 41_688_510);
    }

    function test_e2e() public {
        vm.selectFork(mainnetFork);
        MockTarget target = new MockTarget();
        CrosschainExecutor executor = new CrosschainExecutor();

        vm.selectFork(polygonFork);
        CrosschainRelayer relayer = new CrosschainRelayer();

        Action[] memory actions = new Action[](1);
        actions[0].target = address(target);
        actions[0].data = abi.encode("my super string");
        actions[0].selector = MockTarget.receiveMessage.selector;

        deal(address(this), 100 ether);
        relayer.relayCalls{value: 100e18}(actions, MAINNET, address(executor));

        bytes
            memory message = hex"";

        vm.selectFork(mainnetFork);
        vm.mockCall(
            MAINNNET_ISM,
            abi.encodeWithSelector(
                IInterchainSecurityModule.verify.selector,
                "",
                message
            ),
            abi.encode(true)
        );
        vm.expectEmit(true, true, false, true);
        emit ReceivedMessage("my super string");
        mailbox.process("", message);
    }

    fallback() external payable {}

    receive() external payable {}
}
